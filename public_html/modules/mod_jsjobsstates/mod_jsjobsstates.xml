<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.0"  client="site" method="upgrade">
	<name>JS Jobs BY State</name>
	<author>Joom Sky</author>
	<creationDate>jun 23, 2011</creationDate>
	<copyright>(C) 2010. All rights reserved.</copyright>
	<license>GNU/GPL</license>
	<authorEmail>ahmad@joomsky.com</authorEmail>
	<authorUrl>www.joomsky.com</authorUrl>
	<version>1.0.0</version>
	<description>Show job by States from js jobs database. </description>

	<params>
		<param name="noofjobs" type="text" default="10" label="JS_DISPLAY_MAXIMUM_JOBS_BY_STATE" description="JS_MAX_RECORD_100" />
		<param name="theme" type="list" label="JS_THEME" description="JS_SELECT_THEME_OF_THIS_MODULE">
			<option value="1">JS Jobs Theme</option>
			<option value="2">Template Theme</option>
			<option value="0">No Theme</option>
		</param>
		<param name="ssthj" type="radio" default="1" label="JS_SHOW_ONLY_STATE_HAVE_JOBS" description="JS_SHOW_ONLY_STATE_HAVE_JOBS">
					<option value="0">No</option>
					<option value="1">Yes</option>
		</param>
		<param name="colperrow" type="text"  label="JS_COLUMN_PER_ROW" description="JS_COLUMN_PER_ROW" />
		<param name="sliding" type="radio" default="1" label="JS_SLIDING" description="Yes/No the sliding">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="slidingdirection" type="radio" default="1" label="JS_SLIDING_DIRECTION" description="Yes/No the sliding direction">
			<option value="0">Left</option>
			<option value="1">Up</option>
		</param>

		<param name="consecutivesliding" type="text" default="3" label="JS_CONSECTIVE_SLIDE" description="Consective Slid" />
                <param name="Itemid" type="text" default="" label="ITEMID" description="ITEMID_FOR_NAVIGATION" />
		
	</params>	
	

	<config>
		<fields name="params">
			<fieldset name="basic">
		<field name="noofjobs" type="text" default="10" label="JS_DISPLAY_MAXIMUM_JOBS_BY_STATE" description="JS_MAX_RECORD_100" />
		<field name="theme" type="list" default="1" label="JS_THEME" description="JS_SELECT_THEME_OF_THIS_MODULE">
			<option value="1">JS Jobs Theme</option>
			<option value="2">Template Theme</option>
			<option value="0">No Theme</option>
		</field>
		<field name="ssthj" type="radio" default="1" label="JS_SHOW_ONLY_STATE_HAVE_JOBS" description="JS_SHOW_ONLY_STATE_HAVE_JOBS">
					<option value="0">No</option>
					<option value="1">Yes</option>
		</field>
		<field name="colperrow" type="text"  label="JS_COLUMN_PER_ROW" description="JS_COLUMN_PER_ROW" />
		<field name="sliding" type="radio" default="1" label="JS_SLIDING" description="Yes/No the sliding">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</field>
		<field name="slidingdirection" type="radio" default="1" label="JS_SLIDING_DIRECTION" description="Yes/No the sliding direction">
			<option value="0">Left</option>
			<option value="1">Up</option>
		</field>

		<field name="consecutivesliding" type="text" default="3" label="JS_CONSECTIVE_SLIDE" description="Consective Slid" />
                <field name="Itemid" type="text" default="" label="ITEMID" description="ITEMID_FOR_NAVIGATION" />
			</fieldset>
		</fields>
	</config>
	<files>
		<filename module="mod_jsjobsstates">mod_jsjobsstates.php</filename>
	</files>
	<language>
		<filename tag="en-GB.mod_jsjobsstates.ini">en-GB.mod_jsjobsstates.ini</filename>
	</language>
	
</extension>
