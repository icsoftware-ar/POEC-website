<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.0"  client="site" method="upgrade">
	<name>JS Job Categories</name>
	<author>Joom Sky</author>
	<creationDate>Dec 30, 2010</creationDate>
	<copyright>(C) 2010. All rights reserved.</copyright>
	<license>GNU/GPL</license>
	<authorEmail>ahmad@joomsky.com</authorEmail>
	<authorUrl>www.joomsky.com</authorUrl>
	<version>1.0.0</version>
	<description>Show job categories from js jobs database. </description>

	<files>
		<filename module="mod_jsjobcategories">mod_jsjobcategories.php</filename>
	</files>

	<params >
		<param name="noofcategories" type="text" default="-1" label="Display maximum categories" description="Display maximum categories" />
		<param name="theme" type="list" default="1" label="Theme" description="Select theme of this module">
			<option value="1">JS Jobs Theme</option>
			<option value="2">Template Theme</option>
			<option value="0">No Theme</option>
		</param>
		<param name="jobsincategory" type="radio" default="1" label="Jobs in Category" description="Show jobs in category">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="allcategories" type="radio" default="0" label="All Categories" description="Show all categories">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="colperrow" type="text" label="Column Per Row" description="Column Per Row" />
		<param name="separator" type="radio" default="1" label="Separator" description="Show/Hide the line separator">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="colperrow" type="text" label="Column Per Row" description="Column Per Row" />
		<param name="sliding" type="radio" default="1" label="Sliding" description="Yes/No the sliding">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="slidingdirection" type="radio" default="1" label="Sliding Direction" description="Yes/No the sliding direction">
			<option value="0">Left</option>
			<option value="1">Up</option>
		</param>

		<param name="consecutivesliding" type="text" default="3" label="Consective Slide" description="Consective Slid" />
                <param name="Itemid" type="text" default="" label="ITEMID" description="ITEMID_FOR_NAVIGATION" />

	</params>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="noofcategories" type="text" default="-1" label="Display  maximum categories" description="Display maximum number of categories to show" />
				<field name="theme" type="list" default="1" label="Theme" description="Select theme of this module">
					<option value="1">JS Jobs Theme</option>
					<option value="2">Template Theme</option>
					<option value="0">No Theme</option>
				</field>
				<field name="jobsincategory" type="radio" default="1" label="Jobs in Category" description="Show jobs in category">
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>
				<field name="allcategories" type="radio" default="0" label="All Categories" description="Show all categories">
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>
				<field name="colperrow" type="text" label="Column Per Row" description="Column Per Row" />
				<field name="sliding" type="radio" default="1" label="Sliding" description="Yes/No the sliding">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				<field name="slidingdirection" type="radio" default="1" label="Sliding Direction" description="Yes/No the sliding direction">
					<option value="0">Left</option>
					<option value="1">Up</option>
				</field>

				<field name="consecutivesliding" type="text" default="3" label="Consective Slide" description="Consective Slid" />
                                <field name="Itemid" type="text" default="" label="ITEMID" description="ITEMID_FOR_NAVIGATION" />

			</fieldset>
		</fields>
	</config>
</extension>

