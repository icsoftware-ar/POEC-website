<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="content" method="upgrade"> 
	<name>JS Featured Jobs</name>
	<author>Joom Sky</author>
	<creationDate>Aug 25, 2010</creationDate>
	<copyright>Copyright (C) 2010. All rights reserved.</copyright>
	<license>GNU/GPL</license>
	<authorEmail>ahmad@joomsky.com</authorEmail>
	<authorUrl>www.joomsky.com</authorUrl>
	<version>1.0</version>
	<description>Usage {jsfeaturedjobs}. Show featured jobs from JS Jobs database. </description>
	<params>
		<param name="noofjobs" type="text" default="7" label="JS_DISPLAY_NUMBER_OF_JOBS_-1_TO_ALL" description="-1 to all" />
		<param name="theme" type="list" default="2" label="JS_THEME" description="Select theme of this module">
			<option value="1">JS Jobs Theme</option>
			<option value="2">Template Theme</option>
			<option value="0">No Theme</option>
		</param>
		<param name="title" type="text" default="Featured Jobs" label="JS_TITLE" description="Title" />
		<param name="listingstyle" type="list" default="1" label="JS_LISTING_STYLE" description="Select listing style">
			<option value="1">Vertical</option>
			<option value="2">Horizontal</option>
		</param>
		<param name="shtitle" type="radio" default="1" label="JS_TITLE" description="Show/Hide the title">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="category" type="radio" default="1" label="JS_CATEGORY" description="Show/Hide the category">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="subcategory" type="radio" default="0" label="JS_SUB_CATEGORY" description="Show/Hide the subcategory">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="company" type="radio" default="1" label="JS_COMPANY" description="Show/Hide the company">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="location" type="radio" default="1" label="JS_LOCATION" description="Show/Hide the location">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="posteddate" type="radio" default="1" label="JS_POSTED" description="Show/Hide the posted date">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>

		<param type="spacer" default="&lt;b&gt;Horizontal Listing Only&lt;/b&gt;" />
		
		<param name="noofcols" type="text" default="3" label="JS_NUMBER_OF_COLUMN_PER_ROW" description="Number of columns per row" />
		<param name="logo" type="radio" default="1" label="JS_LOGO" description="Show/Hide the logo">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="logowidth" type="text" default="130" label="JS_LOGO_WIDTH" description="logo width i.e 130" />
		<param name="logoheight" type="text" default="70" label="JS_LOGO_HEIGHT" description="logo height i.e 70" />
		<param name="separator" type="radio" default="1" label="JS_SEPARATOR" description="Show/Hide the line separator">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="sliding" type="radio" default="1" label="JS_SLIDING" description="Yes/No the sliding">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="consecutivesliding" type="text" default="3" label="JS_CONSECTIVE_SLIDE" description="Consective Slid" />
				<param name="Itemid" type="text" default="" label="ITEMID" description="ITEMID_FOR_NAVIGATION" />

	</params>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="noofjobs" type="text" default="7" label="JS_DISPLAY_NUMBER_OF_JOBS_-1_TO_ALL" description="-1 to all" />
				<field name="theme" type="list" default="2" label="JS_THEME" description="Select theme of this module">
					<option value="1">JS Jobs Theme</option>
					<option value="2">Template Theme</option>
					<option value="0">No Theme</option>
				</field>
				<field name="title" type="text" default="Featured Jobs" label="JS_TITLE" description="Title" />
				<field name="listingstyle" type="list" default="1" label="JS_LISTING_STYLE" description="Select listing style">
					<option value="1">Vertical</option>
					<option value="2">Horizontal</option>
				</field>
				<field name="shtitle" type="radio" default="1" label="JS_TITLE" description="Show/Hide the title">
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>
				<field name="category" type="radio" default="1" label="JS_CATEGORY" description="Show/Hide the category">
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>
				<field name="subcategory" type="radio" default="0" label="JS_SUB_CATEGORY" description="Show/Hide the subcategory">
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>
				<field name="company" type="radio" default="1" label="JS_COMPANY" description="Show/Hide the company">
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>
				<field name="location" type="radio" default="1" label="JS_LOCATION" description="Show/Hide the location">
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>
				<field name="posteddate" type="radio" default="1" label="JS_POSTED" description="Show/Hide the posted date">
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>

				<field type="spacer" default="&lt;b&gt;Horizontal Listing Only&lt;/b&gt;" />
				
				<field name="noofcols" type="text" default="3" label="JS_NUMBER_OF_COLUMN_PER_ROW" description="Number of columns per row" />
				<field name="logo" type="radio" default="1" label="JS_LOGO" description="Show/Hide the logo">
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>
				<field name="logowidth" type="text" default="130" label="JS_LOGO_WIDTH" description="logo width i.e 130" />
				<field name="logoheight" type="text" default="70" label="JS_LOGO_HEIGHT" description="logo height i.e 70" />
				<field name="separator" type="radio" default="1" label="JS_SEPARATOR" description="Show/Hide the line separator">
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>
				<field name="sliding" type="radio" default="1" label="JS_SLIDING" description="Yes/No the sliding">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>

				<field name="consecutivesliding" type="text" default="3" label="JS_CONSECTIVE_SLIDE" description="JS_CONSECTIVE_SLIDE" />
				<field name="Itemid" type="text" default="" label="ITEMID" description="ITEMID_FOR_NAVIGATION" />

			</fieldset>
		</fields>
	</config>

	<files>
		<filename plugin="jsfeaturedjobs">jsfeaturedjobs.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_content_jsfeaturedjobs.ini</language>
	</languages>
</extension>
