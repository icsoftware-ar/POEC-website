				<field name="photo" type="radio" default="1" label="JS_PHOTO" description="Show/Hide the photo">
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>
				<field name="photowidth" type="text" default="130" label="JS_PHOTO_WIDTH" description="photo width i.e 130" />
				<field name="photoheight" type="text" default="70" label="JS_PHOTO_HEIGHT" description="photo height i.e 70" />
				<field name="separator" type="radio" default="1" label="JS_SEPARATOR" description="Show/Hide the line separator">
					<option value="0">Hide</option>
