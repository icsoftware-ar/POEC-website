	<description>Usage {jsgoldresumes}. Show gold resumes from JS Jobs database. </description>
	<params>
		<param name="noofresumes" type="text" default="7" label="JS_DISPLAY_NUMBER_OF_RESUMES_-1_TO_ALL" description="-1 to all" />
		<param name="theme" type="list" default="2" label="JS_THEME" description="Select theme of this module">
			<option value="1">JS Jobs Theme</option>
			<option value="2">Template Theme</option>
			<option value="0">No Theme</option>
		</param>
		<param name="title" type="text" default="Gold Resumes" label="JS_TITLE" description="Title" />
		<param name="listingstyle" type="list" default="1" label="JS_LISTING_STYLE" description="Select listing style">
			<option value="1">Vertical</option>
			<option value="2">Horizontal</option>
		</param>
		<param name="shtitle" type="radio" default="1" label="JS_TITLE" description="Show/Hide the title">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="applicationtitle" type="radio" default="1" label="JS_APPLICATION_TITLE" description="Show/Hide the application title">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="name" type="radio" default="1" label="JS_NAME" description="Show/Hide the name">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="category" type="radio" default="1" label="JS_CATEGORY" description="Show/Hide the category">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="subcategory" type="radio" default="0" label="JS_SUB_CATEGORY" description="Show/Hide the subcategory">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="jobtype" type="radio" default="1" label="JS_WORK_PREFERENCE" description="Show/Hide the work preference">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="experience" type="radio" default="1" label="JS_EXPERIENCE" description="Show/Hide the experience">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="available" type="radio" default="1" label="JS_AVAILABLE" description="Show/Hide the available">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>

		<param name="gender" type="radio" default="1" label="JS_GENDER" description="Show/Hide the gender">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="nationality" type="radio" default="1" label="JS_NATIONALITY" description="Show/Hide the nationality">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="location" type="radio" default="1" label="JS_LOCATION" description="Show/Hide the location">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="posteddate" type="radio" default="1" label="JS_POSTED" description="Show/Hide the posted date">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>

		<param type="spacer" default="&lt;b&gt;Horizontal Listing Only&lt;/b&gt;" />
		
		<param name="noofcols" type="text" default="3" label="JS_NUMBER_OF_COLUMN_PER_ROW" description="Number of columns per row" />
		<param name="photo" type="radio" default="1" label="JS_PHOTO" description="Show/Hide the photo">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="photowidth" type="text" default="130" label="JS_PHOTO_WIDTH" description="photo width i.e 130" />
		<param name="photoheight" type="text" default="70" label="JS_PHOTO_HEIGHT" description="photo height i.e 70" />
		<param name="separator" type="radio" default="1" label="JS_SEPARATOR" description="Show/Hide the line separator">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="sliding" type="radio" default="1" label="JS_SLIDING" description="Yes/No the sliding">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="consecutivesliding" type="text" default="3" label="JS_CONSECTIVE_SLIDE" description="Consective Slid" />
				<param name="Itemid" type="text" default="" label="ITEMID" description="ITEMID_FOR_NAVIGATION" />

	</params>
