<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="content" method="upgrade"> 
	<name>JS Top Resumes</name>
	<author>Joom Sky</author>
	<creationDate>Nov 27, 2010</creationDate>
	<copyright>Copyright (C) 2009 - 2010. All rights reserved.</copyright>
	<license>GNU/GPL</license>
	<authorEmail>ahmad@joomsky.com</authorEmail>
	<authorUrl>www.joomsky.com</authorUrl>
	<version>1.0.1</version>
	<description>Usage {jstopresume}. Show most viewed jobs from JS Jobs database. </description>
	<params>
                <param name="noofresumes" type="text" default="7" label="JS_DISPLAY_NUMBER_OF_RESUMES" description="Number of resumes to show" />
                <param name="noofcols" type="text" default="3" label="JS_NUMBER_OF_COLUMN_PER_ROW" description="Number of columns per row" />
                <param name="theme" type="list" default="2" label="JS_THEME" description="Select theme of this module">
                        <option value="1">JS Jobs Theme</option>
                        <option value="2">Template Theme</option>
                        <option value="0">No Theme</option>
                </param>

		<param name="title" type="text" default="Top Resume" label="JS_TITLE" description="Title" />
		<param name="shtitle" type="radio" default="1" label="JS_TITLE" description="Show/Hide the title">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="applicationtitle" type="radio" default="1" label="JS_APPLICATION_TITLE" description="Show/Hide the application title">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="category" type="radio" default="1" label="JS_CATEGORY" description="Show/Hide the category">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="subcategory" type="radio" default="0" label="JS_SUB_CATEGORY" description="Show/Hide the subcategory">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="jobtype" type="radio" default="1" label="JS_WORK_PREFERENCE" description="Show/Hide the work preference">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="highesteducation" type="radio" default="1" label="JS_HIGHEST_EDUCATION" description="Show/Hide the highest education">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="salaryrange" type="radio" default="1" label="JS_SALARY_RANGE" description="Show/Hide the salary range">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="experience" type="radio" default="1" label="JS_EXPERIENCE" description="Show/Hide the experience">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="available" type="radio" default="1" label="JS_AVAILABLE" description="Show/Hide the available">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>

		<param name="gender" type="radio" default="1" label="JS_GENDER" description="Show/Hide the gender">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="nationality" type="radio" default="1" label="JS_NATIONALITY" description="Show/Hide the nationality">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>

		<param name="posteddate" type="radio" default="1" label="JS_POSTED" description="Show/Hide the posted date">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="separator" type="radio" default="1" label="JS_SEPARATOR" description="Show/Hide the line separator">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="sliding" type="radio" default="1" label="JS_SLIDING" description="Yes/No the sliding">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="slidingdirection" type="radio" default="1" label="JS_SLIDING_DIRECTION" description="Yes/No the sliding direction">
			<option value="0">Left</option>
			<option value="1">Up</option>
		</param>

		<param name="consecutivesliding" type="text" default="3" label="JS_CONSECTIVE_SLIDE" description="Consective Slid" />
                        <param name="Itemid" type="text" default="" label="ITEMID" description="ITEMID_FOR_NAVIGATION" />

	</params>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="noofresumes" type="text" default="7" label="JS_DISPLAY_NUMBER_OF_RESUMES" description="Number of resumes to show" />
				<field name="noofcols" type="text" default="3" label="JS_NUMBER_OF_COLUMN_PER_ROW" description="Number of columns per row" />
				<field name="theme" type="list" default="2" label="JS_THEME" description="Select theme of this module">
					<option value="1">JS Jobs Theme</option>
					<option value="2">Template Theme</option>
					<option value="0">No Theme</option>
				</field>

			<field name="title" type="text" default="Top Resume" label="JS_TITLE" description="Title" />
			<field name="shtitle" type="radio" default="1" label="JS_TITLE" description="Show/Hide the title">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</field>
			<field name="applicationtitle" type="radio" default="1" label="JS_APPLICATION_TITLE" description="Show/Hide the application title">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</field>
			<field name="category" type="radio" default="1" label="JS_CATEGORY" description="Show/Hide the category">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</field>
			<field name="subcategory" type="radio" default="0" label="JS_SUB_CATEGORY" description="Show/Hide the subcategory">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</field>
			<field name="jobtype" type="radio" default="1" label="JS_WORK_PREFERENCE" description="Show/Hide the work preference">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</field>
			<field name="highesteducation" type="radio" default="1" label="JS_HIGHEST_EDUCATION" description="Show/Hide the highest education">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</field>
			<field name="salaryrange" type="radio" default="1" label="JS_SALARY_RANGE" description="Show/Hide the salary range">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</field>
			<field name="experience" type="radio" default="1" label="JS_EXPERIENCE" description="Show/Hide the experience">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</field>
			<field name="available" type="radio" default="1" label="JS_AVAILABLE" description="Show/Hide the available">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</field>

			<field name="gender" type="radio" default="1" label="JS_GENDER" description="Show/Hide the gender">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</field>
			<field name="nationality" type="radio" default="1" label="JS_NATIONALITY" description="Show/Hide the nationality">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</field>

			<field name="posteddate" type="radio" default="1" label="JS_POSTED" description="Show/Hide the posted date">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</field>
			<field name="separator" type="radio" default="1" label="JS_SEPARATOR" description="Show/Hide the line separator">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</field>
			<field name="sliding" type="radio" default="1" label="JS_SLIDING" description="Yes/No the sliding">
				<option value="0">No</option>
				<option value="1">Yes</option>
			</field>
			<field name="slidingdirection" type="radio" default="1" label="JS_SLIDING_DIRECTION" description="Yes/No the sliding direction">
				<option value="0">Left</option>
				<option value="1">Up</option>
			</field>

			<field name="consecutivesliding" type="text" default="3" label="JS_CONSECTIVE_SLIDE" description="Consective Slid" />
                        <field name="Itemid" type="text" default="" label="ITEMID" description="ITEMID_FOR_NAVIGATION" />

			</fieldset>
		</fields>
	</config>

	<files>
		<filename plugin="jstopresume">jstopresume.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_content_jstopresume.ini</language>
	</languages>
</extension>
